  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Cria um novo usuário",
        "description": "Cria um novo usuário a partir de um nome e e-mail.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "logan",
                  "email": "logan@example.com.br"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "admin": false,
                    "id": "f8e477d9-7c0d-4fc5-997d-c550a17f0608",
                    "name": "logan",
                    "email": "logan@example.com.br",
                    "created_at": "2022-01-24T21:55:37.475Z",
                    "updated_at": "2022-01-24T21:55:37.475Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já cadastrado na aplicação.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "This email is already in use."
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retorna todos os usuários.",
        "description": "Somente um usuário admin pode acessar.",
        "parameters": [
          {
            "in": "header",
            "required": true,
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "admin": {
                      "type": "boolean"
                    },
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": [
                    {
                      "admin": false,
                      "id": "f8e477d9-7c0d-4fc5-997d-c550a17f0608",
                      "name": "logan",
                      "email": "logan@example.com.br",
                      "created_at": "2022-01-24T21:55:37.475Z",
                      "updated_at": "2022-01-24T21:55:37.475Z"
                    },
                    {
                      "admin": true,
                      "id": "f462fcb4-ab19-4794-a1d4-18debf64ab13",
                      "name": "spencer",
                      "email": "spencer@example.com.br",
                      "created_at": "2022-01-24T22:25:43.530Z",
                      "updated_at": "2022-01-24T22:25:43.530Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User does not exist or user is not an administrator."
                  }
                }
              }
            }
          }
        }
      }
    },
